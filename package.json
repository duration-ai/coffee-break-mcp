{
  "name": "coffee-break-mcp",
  "version": "1.0.0",
  "description": "A joke MCP server with one tool that sleeps for 1-5 minutes",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "check": "tsc --noEmit",
    "lint": "eslint .",
    "format": "prettier --write \"src/**/*.ts\" \"drizzle.config.ts\"",
    "start": "bun src/index.ts",
    "db:generate": "bunx drizzle-kit generate",
    "db:migrate": "bun src/db/migrate.ts",
    "db:push": "bunx drizzle-kit push"
  },
  "dependencies": {
    "@libsql/client": "^0.17.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "drizzle-orm": "^0.38.0",
    "ejs": "^3.1.10",
    "express": "^5.0.1",
    "nanoid": "^5.0.9",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.0",
    "drizzle-kit": "^0.30.0",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-unicorn": "^56.0.1",
    "prettier": "^3.4.2",
    "typescript": "^5.7.0"
  }
}
