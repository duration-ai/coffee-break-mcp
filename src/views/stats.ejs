<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Your Stats - Coffee Break MCP</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="container">
    <h1>Coffee Break MCP</h1>
    <p class="subtitle">Your coffee break stats</p>

    <div class="stats-grid">
      <div class="stat-card">
        <div class="stat-number"><%= stats.totalBreaks %></div>
        <div class="stat-label">Total Breaks</div>
      </div>
      <div class="stat-card">
        <div class="stat-number"><%= stats.breaksThisWeek %></div>
        <div class="stat-label">This Week</div>
      </div>
      <div class="stat-card">
        <div class="stat-number">
          <% if (stats.averageDurationMs) { %>
            <%= Math.round(stats.averageDurationMs / 60000) %>m
          <% } else { %>
            --
          <% } %>
        </div>
        <div class="stat-label">Avg Duration</div>
      </div>
    </div>

    <div class="card">
      <h2>Recent Breaks</h2>
      <% if (stats.lastTenBreaks.length === 0) { %>
        <p>No coffee breaks yet. Go take one!</p>
      <% } else { %>
        <table>
          <thead>
            <tr>
              <th>Started</th>
              <th>Status</th>
              <th>Duration</th>
            </tr>
          </thead>
          <tbody>
            <% stats.lastTenBreaks.forEach(function(b) { %>
              <tr>
                <td><%= new Date(b.startedAt).toLocaleString() %></td>
                <td>
                  <% if (b.isComplete) { %>
                    <span class="badge complete">Complete</span>
                  <% } else { %>
                    <span class="badge in-progress">In Progress</span>
                  <% } %>
                </td>
                <td>
                  <% if (b.durationMs) { %>
                    <%= Math.round(b.durationMs / 60000) %> min
                  <% } else { %>
                    --
                  <% } %>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      <% } %>
    </div>

    <div class="card">
      <h2>Your Token</h2>
      <code class="token"><%= token %></code>
      <p><a href="/auth/register">Generate a new token</a></p>
    </div>
  </div>
</body>
</html>
